{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}
    <div class="product-details">
        <h1>{{ product.name }}</h1>

        {% if product.image %}
            <img src="{{ asset('uploads/' ~ product.image) }}" alt="{{ product.name }}">
        {% endif %}

        <p>Prix : {{ product.price }} €</p>

        {% if product.isFeatured %}
            <span >À la une</span>
        {% endif %}
    </div>
{% endblock %}
