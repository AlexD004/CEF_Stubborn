{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block body %}

    <div class="product-details">

        {% if product.image %}
            <div class="product-detail-media">
                <img src="{{ asset('uploads/' ~ product.image) }}" alt="{{ product.name }}">
            </div>
        {% endif %}

        <div class="product-details-content">
            <div class="product-details-elements">
                <div class="product-details-infos">
                    <h3>{{ product.name }}</h3>
                    <p>Prix : {{ product.price }} â‚¬</p>
                </div>
                <div class="product-details-choices">
                    <form id="addCartForm" method="POST" action="{{ path('cart_add', {id: product.id}) }}">
                        {{ form_start(form) }}
                            <div>
                                {{ form_row(form.size) }}
                            </div>
                            <div>
                                {{ form_row(form.quantity) }}
                            </div>
                        {{ form_end(form) }}
                    </form>
                </div>
            </div>
            <div class="product-details-actions">
                <button class="btn" type="submit" form="addCartForm">Ajouter au panier</button>
            </div>
        </div>
        
    </div>

{% endblock %}
